<!DOCTYPE html>
<html>
	<head>
		<title><%= title %></title>
		<%= render 'layouts/stylesheets' %>
		<%= stylesheet_link_tag 'custom', :media => 'screen' %>
		<%= javascript_include_tag :defaults %>
		<%= csrf_meta_tag %>
	</head>
<body>
	<div class="container">
		<section>
			<% flash.each do |key, value| %>
				<div class="flash <%= key %>"><%= value %></div>
			<% end %>
			<%= yield %>
		</section>
		<%= render 'layouts/footer' %>
	</div>
</body>
</html>
